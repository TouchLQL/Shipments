@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>重庆品佳调味</title>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")" />
    <link href="~/Content/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/app/simpleLineIcons.css" rel="stylesheet" />
    <link href="~/Content/app/animatecss.css" rel="stylesheet" />
    <link href="~/Content/app/whirl.css" rel="stylesheet" />
    <link href="~/Content/app/bootstrap.css" rel="stylesheet" id="bscss" />
    <link href="~/Content/app/app.css" rel="stylesheet" id="maincss" />
    <link href="~/Content/app/login.css" rel="stylesheet" />
</head>

<body>
    <style type="text/css">
        .tyg-div {
            z-index: -1000;
            float: left;
            position: absolute;
            left: 5%;
            top: 20%;
        }
    </style>
    <div class="wrapper">
        <div class="tyg-div" style="top: 8%;">
            <img src="~/Content/Gateway/image/logo_index.png" style="width:40%;" />
            @*<img src="~/Content/Gateway/image/mobi.png" style="width: 30%" />*@
        </div>
        <div class="wd-xl abs-center">
            <!-- START panel block-center mt-xl-->
            <div class="panel panel-dark panel-flat">
                <div class="panel-heading text-center" style="background-color:#fff">
                    <h3 style="color:#50b1e5">Welcome To Login</h3>
                </div>
                <div class="panel-body">
                    <form role="form" data-parsley-validate="" novalidate="" class="mb-lg log-form">
                        <div class="form-group has-feedback">
                            <input id="username" type="text" placeholder="Username" autocomplete="off" autofocus="" required="required" data-parsley-error-message="Please input Username..." class="form-control ime" />
                            <span class="fa fa-user form-control-feedback text-muted"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <input id="password" type="password" placeholder="Password" required="required" data-parsley-error-message="Please enter your password..." class="form-control" />
                            <span class="fa fa-lock form-control-feedback text-muted"></span>
                        </div>

                        <div class="clearfix">
                            <div class="form-group has-feedback pull-left vcode-wrapper">
                                <input id="vcode" type="text" placeholder="Verification code" required="required" data-parsley-error-message="please enter verification code..." class="form-control ime" />
                                <span class="fa fa-check-circle form-control-feedback text-muted"></span>
                            </div>
                            <div class="pull-right">
                                <img class="vcode" id="imgVerify" src="@Url.Content("~/Content/ValidateCode.ashx")" alt="Not clear？Click to replace" title="Click to replace the verification code"
                                     onclick="refresh()" />
                            </div>
                        </div>
                        <div class="clearfix">
                            <div class="checkbox c-checkbox pull-left mt0">
                                <label>
                                    <input type="checkbox" value="" name="remember" />
                                    <span class="fa fa-check"></span>remember
                                </label>
                            </div>
                        </div>
                        <button id="btnLogin" type="button" class="btn btn-block btn-primary mt-lg">log in</button>
                    </form>
                </div>
            </div>
            <!-- END panel-->
        </div>
    </div>
    <div class="p-lg text-center info-bottom">
        <span>&copy;</span>
        <span>2020</span>
        <span>-</span>
        <span>重庆品佳调味</span>
    </div>
    <div id="particles">
        <canvas id="bgcanvas"></canvas>
    </div>
    <script src="~/Scripts/modernizr.js"></script>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/storage.js"></script>
    <script src="~/Scripts/app.js"></script>
    <script src="~/Pscripts/Home/login.js"></script>
    <script src="~/Scripts/parsley.js"></script>
</body>

</html>